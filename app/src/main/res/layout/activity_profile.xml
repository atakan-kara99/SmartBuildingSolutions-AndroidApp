<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/standard_layout_v3"
        layout="@layout/standard_layout_v3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standard_layout_v3">

        <TextView
            android:id="@+id/id"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.2"
            android:text="ID:"
            android:textStyle="bold"
            android:textSize="24dp">

        </TextView>

        <TextView
            android:id="@+id/forename"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:text="Vorname:"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/lastname"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:text="Nachname:"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:text="Username:"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/role"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:text="Rolle:"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/organisation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:text="Organisation:"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/standard_layout_v3">


        <TextView
            android:id="@+id/showId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.2"
            android:textSize="24dp">

        </TextView>

        <TextView
            android:id="@+id/showForename"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/showLastname"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/showUsername"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/showRole"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/showOrga"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="24dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>